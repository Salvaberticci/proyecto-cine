<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #5a6fd8, #6a4190);
        }
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        .table thead {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }
        .btn-sm {
            border-radius: 20px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .payment-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        .credit-card { background: linear-gradient(45deg, #667eea, #764ba2); }
        .cash { background: linear-gradient(45deg, #28a745, #20c997); }
        .transfer { background: linear-gradient(45deg, #ffc107, #fd7e14); }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0"><i class="fas fa-credit-card text-primary me-2"></i><%= title %></h1>
                <p class="text-muted mb-0">Gestión de métodos de pago disponibles</p>
            </div>
            <a href="/metodospago/crear" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Agregar Método
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (metodosPago && metodosPago.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-credit-card me-1"></i>Método de Pago</th>
                                    <th><i class="fas fa-tag me-1"></i>Tipo</th>
                                    <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% metodosPago.forEach(function(metodo) { %>
                                    <tr>
                                        <td><%= metodo.id_metodo %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (metodo.nombre.toLowerCase().includes('crédito') || metodo.nombre.toLowerCase().includes('tarjeta')) { %>
                                                    <div class="payment-icon credit-card me-2">
                                                        <i class="fas fa-credit-card"></i>
                                                    </div>
                                                <% } else if (metodo.nombre.toLowerCase().includes('efectivo')) { %>
                                                    <div class="payment-icon cash me-2">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                    </div>
                                                <% } else { %>
                                                    <div class="payment-icon transfer me-2">
                                                        <i class="fas fa-university"></i>
                                                    </div>
                                                <% } %>
                                                <strong><%= metodo.nombre %></strong>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (metodo.nombre.toLowerCase().includes('crédito') || metodo.nombre.toLowerCase().includes('tarjeta')) { %>
                                                <span class="badge bg-primary">Tarjeta</span>
                                            <% } else if (metodo.nombre.toLowerCase().includes('efectivo')) { %>
                                                <span class="badge bg-success">Efectivo</span>
                                            <% } else { %>
                                                <span class="badge bg-warning text-dark">Transferencia</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/metodospago/<%= metodo.id_metodo %>/editar" class="btn btn-warning btn-sm me-1">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <button class="btn btn-danger btn-sm" data-id="<%= metodo.id_metodo %>" data-nombre="<%= metodo.nombre %>">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-credit-card fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay métodos de pago registrados</h4>
                        <p class="text-muted">Comienza agregando tu primer método de pago.</p>
                        <a href="/metodospago/crear" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Primer Método
                        </a>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home me-2"></i>Volver al Inicio
            </a>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="eliminarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar el método de pago <strong id="metodoNombre"></strong>?</p>
                    <p class="text-danger small">Esta acción no se puede deshacer y puede afectar las ventas registradas.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmarEliminar">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Agregar event listeners a todos los botones de eliminar
        document.addEventListener('DOMContentLoaded', function() {
            const eliminarButtons = document.querySelectorAll('.btn-danger[data-id]');
            eliminarButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const nombre = this.getAttribute('data-nombre');
                    eliminarMetodoPago(id, nombre);
                });
            });
        });

        let metodoIdAEliminar = null;

        function eliminarMetodoPago(id, nombre) {
            metodoIdAEliminar = id;
            document.getElementById('metodoNombre').textContent = nombre;
            new bootstrap.Modal(document.getElementById('eliminarModal')).show();
        }

        document.getElementById('confirmarEliminar').addEventListener('click', async function() {
            if (!metodoIdAEliminar) return;

            try {
                const response = await fetch(`/api/metodospago/${metodoIdAEliminar}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.json();
                    alert('Error al eliminar el método de pago: ' + error.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el método de pago');
            }

            bootstrap.Modal.getInstance(document.getElementById('eliminarModal')).hide();
        });
    </script>
</body>
</html>