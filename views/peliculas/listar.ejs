<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #5a6fd8, #6a4190);
        }
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        .table thead {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }
        .btn-sm {
            border-radius: 20px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0"><i class="fas fa-film text-primary me-2"></i><%= title %></h1>
                <p class="text-muted mb-0">Gestión completa de películas del cine</p>
            </div>
            <a href="/peliculas/crear" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Agregar Película
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (peliculas && peliculas.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-film me-1"></i>Título</th>
                                    <th><i class="fas fa-calendar me-1"></i>Año</th>
                                    <th><i class="fas fa-clock me-1"></i>Duración (min)</th>
                                    <th><i class="fas fa-cogs me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% peliculas.forEach(function(pelicula) { %>
                                    <tr>
                                        <td><%= pelicula.id_pelicula %></td>
                                        <td>
                                            <strong><%= pelicula.titulo %></strong>
                                        </td>
                                        <td><%= pelicula.anio %></td>
                                        <td><%= pelicula.duracion %> min</td>
                                        <td>
                                            <a href="/peliculas/<%= pelicula.id_pelicula %>/editar" class="btn btn-warning btn-sm me-1">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <button class="btn btn-danger btn-sm" onclick="eliminarPelicula(<%= pelicula.id_pelicula %>, '<%= pelicula.titulo %>')">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-film fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay películas registradas</h4>
                        <p class="text-muted">Comienza agregando tu primera película al sistema.</p>
                        <a href="/peliculas/crear" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Primera Película
                        </a>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home me-2"></i>Volver al Inicio
            </a>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="eliminarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar la película <strong id="peliculaNombre"></strong>?</p>
                    <p class="text-danger small">Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmarEliminar">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let peliculaIdAEliminar = null;

        function eliminarPelicula(id, nombre) {
            peliculaIdAEliminar = id;
            document.getElementById('peliculaNombre').textContent = nombre;
            new bootstrap.Modal(document.getElementById('eliminarModal')).show();
        }

        document.getElementById('confirmarEliminar').addEventListener('click', async function() {
            if (!peliculaIdAEliminar) return;

            try {
                const response = await fetch(`/api/peliculas/${peliculaIdAEliminar}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.json();
                    alert('Error al eliminar la película: ' + error.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar la película');
            }

            bootstrap.Modal.getInstance(document.getElementById('eliminarModal')).hide();
        });
    </script>
</body>
</html>